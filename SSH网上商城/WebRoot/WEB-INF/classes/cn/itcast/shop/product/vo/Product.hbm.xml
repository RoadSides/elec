<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
   <hibernate-mapping>
   		<class name="cn.itcast.shop.product.vo.Product"  table="product">
   				<id name="pid">
   					<generator class="native" ></generator>
   				</id>
   				<property name="pname"></property>
   				<property name="market_price"></property>
   				<property name="shop_price"></property>
   				<property name="image"></property>
   				<property name="pdesc"></property>
   				<property name="is_hot"></property>
   				<property name="pdate"></property>
				<many-to-one name="categorySecond"  class="cn.itcast.shop.categorysecond.vo.CategorySecond"  column="csid"  lazy="false">
				</many-to-one>
	<!-- -		<set name="orderItems"  cascade="save-update"  >
						<key column="pid"/>
						<one-to-many class="cn.itcast.shop.product.vo.Product"/>
				</set> -->	
   		</class>
   </hibernate-mapping> 
   